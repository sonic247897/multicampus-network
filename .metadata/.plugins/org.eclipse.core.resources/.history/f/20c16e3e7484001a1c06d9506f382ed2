package basic;

import java.io.BufferedReader;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.InputStream;
import java.io.InputStreamReader;
import java.net.MalformedURLException;
import java.net.URL;

public class URLExam01 {
	public static void main(String[] args) {
		URL url;
		try {
			url = new URL("http://cafefiles.naver.net/20120209_226/pododumok_13287752996753FNE4_jpg/%C0%E5%B5%BF%B0%C7_5_pododumok.jpg");
		
		InputStream data = url.openStream();
		InputStreamReader isr = new InputStreamReader(data);
		BufferedReader br = new BufferedReader(isr);
		
		// 바이너리 파일 출력 IO
		FileOutputStream fos = new FileOutputStream("c:/iot/image/jang");
		while(true) {
			String data_byte = br.readLine();
			if(data_byte == null) {
				break;
			}
			System.out.println(data_byte);
		}
		} catch (MalformedURLException e) {
			e.printStackTrace();
		} catch (IOException e) {
			e.printStackTrace();
		}
		
	}

}
